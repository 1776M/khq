<%= provide(:title, 'Add rules') %>
<h4>Add rules</h4>

<div class="row">
  <div class="span12">

    <%= form_for @rule do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <%= f.text_area :name %>

      <%= hidden_field_tag :basecase_id, @basecase.id %>
 
      <%= f.submit "Submit", :class => "btn"  %>
    <% end %>
  </div>
</div>
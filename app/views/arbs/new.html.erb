<%= provide(:title, 'Add data') %>
<h4>Add data</h4>

<div class="row">
  <div class="span12">

    <%= form_for @arb do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <%= f.text_area :name %>

      <%= hidden_field_tag :basecase_id, @basecase.id %>
 
      <%= f.submit "Submit", :class => "btn"  %>
    <% end %>
  </div>
</div>
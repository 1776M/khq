<%= provide(:title, 'Add a scenario') %>
<h2>Add a scenario</h2>

<div class="row">
  <div class="span6 offset3">

    <%= form_for @scenario do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
  
      <%= hidden_field_tag :project_id, @project.id %>

      <%= f.submit "Add scenario", :class => "btn btn-mini btn-primary" %>
  <% end %>
  </div>
</div>
<%= provide(:title, 'Add a basecase') %>
<h1>Add a basecase</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for @basecase do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
  
      <%= hidden_field_tag :group_id, @group.id %>

      <%= f.submit "Add basecase", :class => "btn btn-large btn-primary" %>
  <% end %>
  </div>
</div>